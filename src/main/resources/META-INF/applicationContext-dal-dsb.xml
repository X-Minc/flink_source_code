<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="com.ifugle.rap" />

	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager" >
		 <property name="dataSource" ref="dataSourceDsb"></property>
	</bean>


	<bean id="dataSourceDsb" class="com.mchange.v2.c3p0.ComboPooledDataSource" >
		<property name="minPoolSize" value="2" />
		<property name="maxPoolSize" value="5" />
		<property name="acquireIncrement" value="1" />
		<property name="idleConnectionTestPeriod" value="1800" />
		<property name="maxIdleTime" value="25000" />
		<property name="maxStatementsPerConnection" value="10" />
		<property name="maxStatements" value="400" />
		<property name="preferredTestQuery" value="SELECT @@SQL_MODE" />
		<property name="testConnectionOnCheckin" value="true" />
		<property name="testConnectionOnCheckout" value="false" />
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="jdbcUrl">
			<value><![CDATA[${dsb.jdbc.url}]]></value>
		</property>
		<property name="user" value="${dsb.jdbc.username}" />
		<property name="password">
			<value>${dsb.jdbc.password}</value>
		</property>
	</bean>
	
</beans>
